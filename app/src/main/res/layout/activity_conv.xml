<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/bgcolor"
    tools:context=".ConvActivity">

    <TextView
        android:id="@+id/txtChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="What do you wish to convert?"/>

    <Button
        android:id="@+id/btnLength"
        android:layout_width="120dp"
        android:layout_below="@id/txtChoice"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background_btn1"
        android:elevation="10dp"
        android:onClick="length"
        android:text="Length"
        android:textAllCaps="false"
        android:textColor="@color/WhiteText"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnWeight"
        android:layout_width="120dp"
        android:layout_below="@id/txtChoice"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/background_btn1"
        android:elevation="10dp"
        android:onClick="weight"
        android:text="Weight"
        android:textAllCaps="false"
        android:textColor="@color/WhiteText"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSpeed"
        android:layout_width="120dp"
        android:layout_below="@id/btnLength"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background_btn1"
        android:elevation="10dp"
        android:onClick="speed"
        android:text="Speed"
        android:textAllCaps="false"
        android:textColor="@color/WhiteText"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btnCurrency"
        android:layout_width="120dp"
        android:layout_below="@id/btnWeight"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/background_btn1"
        android:elevation="10dp"
        android:onClick="currency"
        android:text="Currency"
        android:textAllCaps="false"
        android:textColor="@color/WhiteText"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnTemperature"
        android:layout_width="150dp"
        android:layout_below="@id/btnSpeed"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_btn1"
        android:elevation="10dp"
        android:onClick="temp"
        android:text="Temperature"
        android:textAllCaps="false"
        android:textColor="@color/WhiteText"
        android:textSize="20sp" />

</RelativeLayout>